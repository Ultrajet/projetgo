{% extends 'base.html.twig' %}

{% block title %}Admin Jeu{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-3 mb-5">Gestion des jeux</h1>

    
    <table class="table col-md-8 mx-auto">
        <thead>
            <tr class="text-center titre_colonne">
                <td>Id</td>
                <td>Nom</td>
            </tr>
        </thead>
        <tbody>
            {% for jeu in jeux %}
                <tr class="text-center">
                    <td>{{ jeu.id }}</td>
                    <td>{{ jeu.nom }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
<div class="row">
    <a  href="{{path('admin_jeu_add')}}" class="btn col-6 mx-auto text-center mt-3 ajout_jeu"><i class="fas fa-plus"></i> Ajouter un jeux</a>
</div>


</div>

{% endblock %}